{
  "name": "esbuild-plugin-browserslist",
  "description": "Configure esbuild's target based on a browserslist query",
  "version": "0.7.0",
  "author": "Nihal Gonsalves <nihal@nihalgonsalves.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/nihalgonsalves/esbuild-plugin-browserslist.git"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist"
  ],
  "standard-version": {
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  },
  "scripts": {
    "typecheck": "tsc",
    "build": "rm -rf dist && tsc --project tsconfig.build.json",
    "test": "jest",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src/",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepare": "husky install",
    "prepublishOnly": "yarn build && yarn lint && yarn test"
  },
  "peerDependencies": {
    "browserslist": "^4.21.5",
    "esbuild": "~0.17.5"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@nihalgonsalves/esconfig": "^0.2.4",
    "@types/debug": "^4.1.8",
    "@types/jest": "^29.5.1",
    "@types/node": "18",
    "browserslist": "^4.21.7",
    "esbuild": "~0.17.19",
    "eslint": "^8.41.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
