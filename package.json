  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@nihalgonsalves/esconfig": "^0.2.1",
    "@types/debug": "^4.1.7",
    "@types/jest": "^28.1.7",
    "@types/node": "16",
    "browserslist": "^4.21.3",
    "esbuild": "~0.15.5",
    "eslint": "^8.22.0",
    "eslint-plugin-jest": "^26.8.7",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4"
  }
