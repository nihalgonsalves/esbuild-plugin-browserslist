{
  "name": "esbuild-plugin-browserslist",
  "description": "Configure esbuild's target based on a browserslist query",
  "version": "0.4.7",
  "author": "Nihal Gonsalves <nihal@nihalgonsalves.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/nihalgonsalves/esbuild-plugin-browserslist.git"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=12.13.0"
  },
  "files": [
    "dist"
  ],
  "standard-version": {
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  },
  "scripts": {
    "typecheck": "tsc",
    "build": "rm -rf dist && tsc --project tsconfig.build.json",
    "test": "jest",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src/",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepare": "husky install",
    "prepublishOnly": "yarn build && yarn lint && yarn test"
  },
  "peerDependencies": {
    "browserslist": "^4.20.2",
    "esbuild": "~0.14.27"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "zod": "^3.14.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@nihalgonsalves/esconfig": "^0.1.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.4.1",
    "@types/node": "17",
    "browserslist": "^4.20.2",
    "esbuild": "~0.14.27",
    "eslint": "^8.11.0",
    "eslint-plugin-jest": "^26.1.2",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.6.0",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  }
}
